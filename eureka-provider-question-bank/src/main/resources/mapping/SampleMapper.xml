        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kim.aries.mapper.SampleMapper">
    <select id="findSampleByTopicId" resultType="kim.aries.modal.Sample">
        select * from sample
        where topic_id=#{topicId}
